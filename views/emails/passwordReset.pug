extends _baseEmail

block content
    tbody
        tr
            td.wrapper
                table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                    tbody
                        tr
                            td
                                // CONTENT
                                p Hi #{firstName},
                                p This is your forgot password token.
                                p Click here : #{url}
                                table.btn.btn-primary(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                    tbody
                                        tr
                                            td(align='left')
                                                table(role='presentation', border='0', cellpadding='0', cellspacing='0')
                                                    tbody
                                                        tr
                                                            td
                                                                a(href=`${url}`, target='_blank') Click to reset password
                                p - This token valid only 10 mins
